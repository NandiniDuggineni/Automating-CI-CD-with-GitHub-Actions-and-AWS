name: Deploy to AWS

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    permissions:
      id-token: write
      contents: read

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v2
        with:
          role-to-assume: arn:aws:iam::<account-id>:role/<ci-cd-role>
          aws-region: us-east-1

      - name: Deploy to EC2 (or S3)
        run: |
          aws s3 sync . s3://your-s3-bucket-name/ --delete

      - name: Send SNS notification
        run: |
          aws sns publish --topic-arn arn:aws:sns:us-east-1:<account-id>:deploy-topic \
            --message "ðŸš€ Deployment to AWS successful!" \
            --subject "CI/CD Pipeline"
